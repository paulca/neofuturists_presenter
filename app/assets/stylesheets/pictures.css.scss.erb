$screen_width: 1920px;
$screen_height: 1080px;

$thumb_width: 192px;
$thumb_height: 180px;

body { margin: 0;}

a { margin: 0; padding: 0; }
div.image-frame {
  float: left;
  width: $thumb_width;
  height: $thumb_height;
}
div.image-frame a {
  display: block;
  width: $thumb_width;
  height: $thumb_height;
  background-color: #FFF;
  opacity: 0.6;
  font-family: Helvetica, sans-serif;
  text-decoration: none;
  color: #000;
  font-weight: bold;
  font-size: 4em;
  text-align: center;
}

span.index { 
  padding-top: 1em;
  width: $thumb_width;
  height: $thumb_height;
  display: block;
}

img {
  margin: 0;
  padding: 0;
  -webkit-transition: all 0.5s ease-in-out;
  opacity:0.4;
}

img.on {
  width: $screen_width;
  height: $screen_height;
  opacity:1;
}

img.done {
  opacity: 1;
}

div#frame {
  position: absolute;
  left: 103;
  top: 0;
  display: none;
  width: $screen_width;
  height: $screen_height;
}

.hidden { display: none; }